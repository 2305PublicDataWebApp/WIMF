<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardMapper">
	<!-- 게시글 등록 -->
	<insert id="insertBoard">
		INSERT INTO BOARD_TBL VALUES(BOARD_NO_SEQ.NEXTVAL, #{boardTitle}, #{boardContent}, 'admin', #{boardFileName}, #{boardFileRename}, #{boardFilePath}, #{boardFileLength}, DEFAULT, DEFAULT, DEFAULT)
	</insert>
	<!-- 게시글 리스트 조회 -->
	<select id="selectBoardList" resultType="Board">
		SELECT * FROM BOARD_TBL ORDER BY BOARD_NO DESC
	</select>
	<!-- 게시글 상세조회 -->
	<select id="selectOneByBoard" resultType="Board">
		SELECT * FROM BOARD_TBL WHERE BOARD_NO = #{boardNo}
	</select>
	<!-- 단체 게시글 갯수 -->
	<select id="selectListCount" resultType="_int">
		SELECT COUNT(*) FROM BOARD_TBL
	</select>
	<!-- 게시글 수정 페이지 -->
	<select id="selectBoardByNo" resultType="Board">
		SELECT * FROM BOARD_TBL WHERE BOARD_NO = #{boardNo}
	</select>
</mapper>